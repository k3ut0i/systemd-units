[Unit]
Description=StaloneTray Service
Before = default.target

[Service]
Type=forking
Environment=DISPLAY=:0
ExecStart=/usr/bin/stalonetray
ExecStop=/usr/bin/pkill -9 stalonetray
RemainAfterExit=yes

[Install]

WantedBy= default.target
